{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "af357bb1-14bf-6347-af0c-6ec8891a8047",
  "name": "Appknox",
  "friendlyName": "Appknox",
  "description": "Appknox",
  "helpMarkDown": "[Learn more about this task](https://marketplace.visualstudio.com/items?itemName=appknox.appknox)",
  "category": "Build",
  "author": "Appknox",
  "version": {
    "Major": 2,
    "Minor": 0,
    "Patch": 13
  },
  "instanceNameFormat": "Appknox $(filePath)",
  "showEnvironmentVariables": false,
  "minimumAgentVersion": "2.182.1",
  "inputs": [
    {
      "name": "filePath",
      "type": "string",
      "label": "File Path",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Path to binary file"
    },
    {
      "name": "accessToken",
      "type": "string",
      "label": "Access Token",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Appknox API access token"
    },
    {
      "name": "riskThreshold",
      "type": "pickList",
      "label": "Risk Threshold",
      "defaultValue": "low",
      "options": {
        "low": "Low",
        "medium": "Medium",
        "high": "High",
        "critical": "Critical"
      },
      "required": false,
      "helpMarkDown": "Risk level for which build should fail"
    },
    {
      "name": "region",
      "type": "pickList",
      "label": "Region",
      "defaultValue": "Global",
      "options": {
        "Global": "Global (https://api.appknox.com/)",
        "Saudi": "Saudi (https://sa.secure.appknox.com/)"
      },
      "required": true,
      "helpMarkDown": "Choose the region for Appknox API"
    }
  ],
  "execution": {
    "Node10": {
      "target": "index.js"
    }
  }
}
